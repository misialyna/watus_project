ZMQ_SUB_ADDR=tcp://127.0.0.1:7781

#Whisper
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=auto

#ECAPA / Leader sticky
SPEAKER_VERIFY=1
SPEAKER_REQUIRE_MATCH=1
