# ==== ZMQ ====
ZMQ_PUB_ADDR=tcp://127.0.0.1:7780
ZMQ_SUB_ADDR=tcp://127.0.0.1:7781

# ==== STT (Faster-Whisper only) ====
# Krótkie nazwy mapowane w watus.py na modele CT2 (np. small -> guillaumekln/faster-whisper-small)
ASR_BACKEND=faster
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WATUS_CPU_THREADS=8
WHISPER_NUM_WORKERS=1
CT2_SKIP_CONVERTERS=1    # ważne: nie ciągnij transformers; zostawiamy czyste CT2

# ==== Audio / VAD ====
# Ustaw po nazwie (fragment) lub po indeksie z listy urządzeń wypisywanej przez watus.py
WATUS_INPUT_DEVICE=1
WATUS_OUTPUT_DEVICE=2
WATUS_SR=16000
WATUS_BLOCKSIZE=160
WATUS_VAD_MODE=1
WATUS_VAD_MIN_MS=280
WATUS_SIL_MS_END=650
ASR_MIN_DBFS=-34

# Start mowy – twarde progi
WATUS_START_MIN_FRAMES=8
WATUS_START_MIN_DBFS=-30
WATUS_MIN_MS_BEFORE_ENDPOINT=500

END_AT_DBFS_DROP=0
EMIT_COOLDOWN_MS=300
MAX_UTT_MS=6500
WAIT_REPLY_S=0.9
# WATUS_GAP_TOL_MS=450   # (opcjonalnie, jeśli włączysz w kodzie)

# ==== TTS Piper ====
# UZUPEŁNIJ ŚCIEŻKI
PIPER_BIN=/ABSOLUTNA/SCIEZKA/do/models/piper/piper
PIPER_MODEL=/ABSOLUTNA/SCIEZKA/do/models/piper/pl_PL-darkman-medium.onnx
PIPER_CONFIG=/ABSOLUTNA/SCIEZKA/do/models/piper/pl_PL-darkman-medium.onnx.json
# PIPER_SAMPLE_RATE=22050

# ==== LLM HTTP (lokalny backend) ====
LLM_HTTP_URL=http://127.0.0.1:8000/api1/process_question
HTTP_TIMEOUT=20
LLM_HTTP_TIMEOUT=30

# ==== Logi / meta ====
LOG_DIR=./
DIALOG_PATH=dialog.jsonl

# ==== Weryfikacja mówcy (ECAPA / SpeechBrain) ====
TORCH_NUM_THREADS=1
PYTORCH_ENABLE_MPS_FALLBACK=1
SPEAKER_VERIFY=1
SPEAKER_REQUIRE_MATCH=1

# ==== Scenariusze ====
WATUS_SCENARIOS_DIR=./scenarios_text
SCENARIO_ACTIVE_PATH=./scenarios_text/active.jsonl

# ==== Kamera / wizja ====
CAMERA_NAME=cam_front
CAMERA_DEVICE=0
CAMERA_JSONL=./camera.jsonl
CAMERA_WINDOW_SEC=2.5
VISION_SCORE_THR=0.5
VISION_WRITE_HZ=1.0
VISION_USE_RTDETR=1
RTDETR_DIR=./oczyWatusia
RTDETR_WEIGHTS=./oczyWatusia/rtdetr-l.pt

# ==== Wątki BLAS ====
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# ==== CTranslate2 (unikamy transformers) ====
CT2_SKIP_CONVERTERS=1
